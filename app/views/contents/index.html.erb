<%= render 'admintop' %>
<div id="main">
  <div class="breadcrumb-wrapper">
    <div class="container">

      <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 row ">
        <h3 class="title">文章管理</h3>
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>标题</th>
            <th>分类</th>
            <th>创建时间</th>
            <th>作者</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <%@contents.each do |content| %>
              <tr>
                <td><%= content.title %></td>
                <td>
                  <% @clas.each do |cla| %>

                      <% if content.cla_id.to_s == cla.id.to_s %>
                          <%= cla.title %>
                          <% break %>
                      <% end %>

                  <% end %>
                </td>
                <td><%= content.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td><%= content.auther %></td>
                <td><%= link_to '',edit_content_path(content),class:"icon-pencil",'data-no-turbolink' => true %>&nbsp;<%= link_to '', content, method: :delete, data: { confirm: 'Are you sure?' },class:"icon-trash" %></td>
              </tr>
          <% end %>

          </tbody>
        </table>



<div >

  <%= will_paginate @contents, previous_label:'上一页', next_label: '下一页' %>
</div>
        <%= link_to '创建文章',new_content_path,class:"btn-small btn-color btn-pad pull-right",'data-no-turbolink' => true %>
      </div>


    </div>
  </div>
</div>
<%= render 'footer' %>