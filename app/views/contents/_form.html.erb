
<script>
    function claselect()
    {

        document.getElementById("cla_id").value = document.getElementById("cla_select").value;
    }
</script>

<div id="main">
  <div class="breadcrumb-wrapper">
    <div class="container">




      <div class="row">
        <div class="col-lg-12 col-md-12">
          <h3 class="title">Form Elements</h3>
          <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 ">
              <%= form_for(@content,:html => {:multipart => true}) do |f| %>


                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">
                      栏目:
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <%= f.hidden_field :cla_id,class:"form-control",id:"cla_id",value:"1"  %>
                    <select class="form-control" id="cla_select" onchange="claselect()">
                      <% @clas.each do |cla| %>
                          <option value=<%= cla.id %> ><%= cla.title %></option>
                      <% end %>
                    </select>
                  </div>
                  <br>
                  <br>



                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">
                      标题
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <%= f.text_field :title ,class:"form-control" %>
                  </div>
                  <br>
                  <br>


                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">
                      作者
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <%= f.text_field :auther, class:"form-control" %>
                  </div>
                  <br>
                  <br>



                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">
                      产品图片
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <%= f.file_field :image, class:"form-control" %>
                  </div>

                  <br>
                  <% if @content.image_content_type.to_s.length>0 %>
                      <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                        <p class="pull-right">

                        </p>
                      </div>
                      <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">

                        <img src=<%=@content.image.url %> >

                      </div>
                  <% end %>
                  <br>
                  <br>


                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">

                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">

                  </div>
                  <br>
                  <br>



<% if params[:id] %>
                  <div >

                        <%= f.kindeditor :content, :simple_mode => true,:owner_id => @content.id,height:800 %>


                  </div>
                      <% end %>





                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <div class="pull-right">
                      <%= f.submit '确定',class:'btn-small btn-color btn-pad' %>
                    </div>

                  </div>




                  </div>
                  </div>
                  </div>
                  </div>
                  <!-- End 5th Row-->






              <% end %>

              </div>
  </div>
</div>
