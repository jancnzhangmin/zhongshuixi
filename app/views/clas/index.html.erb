<%= render 'admintop' %>
<div id="main">
  <div class="breadcrumb-wrapper">
    <div class="container">

      <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 row">
        <h3 class="title">lanmu</h3>
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>标题</th>
            <th>关键字</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <% @clas.each do |cla| %>
              <tr>
                <td><%= cla.title %></td>
                <td><%= cla.keyword %></td>

                <td><%= link_to '',edit_cla_path(cla),class:"icon-pencil" %>&nbsp;<%= link_to '', cla, method: :delete, data: { confirm: 'Are you sure?' },class:"icon-trash" %></td>
              </tr>
          <% end %>

          </tbody>
        </table>

        <a class="btn-small btn-color btn-pad pull-right" href=<%= new_cla_path %>>创建lanmu</a>
      </div>


    </div>
  </div>
</div>