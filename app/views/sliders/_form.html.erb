<%= render 'admintop' %>
<div id="main">
  <div class="breadcrumb-wrapper">
    <div class="container">




      <div class="row">
        <div class="col-lg-12 col-md-12">
          <h3 class="title">Form Elements</h3>
          <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 ">
              <%= form_for(@slider,:html => {:multipart => true}) do |f| %>


                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">
                      链接
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <%= f.text_field :link ,class:"form-control" %>
                  </div>


                  <br>
                  <br>

                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">
                      图片:
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <%= f.file_field :image,class:"form-control"  %>
                  </div>

                  <br>
                  <br>

                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">

                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <% if @slider.image_content_type != "" %>
                      <%= image_tag @slider.image.url %>
                    <% end %>
                  </div>





                  <br>
                  <br>

                  <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4">
                    <p class="pull-right">
                    </p>
                  </div>
                  <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 ">
                    <div class="pull-right">
                      <%= f.submit '确定',class:'btn-small btn-color btn-pad' %>

                    </div>
                  </div>




                  </div>
                  </div>
                  </div>
                  </div>
                  <!-- End 5th Row-->






              <% end %>

              </div>
  </div>
</div>