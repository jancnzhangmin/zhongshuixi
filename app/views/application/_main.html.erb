<!-- Main Content start-->
<div class="main-content">
  <div class="container">
    <div class="row">

      <% @mains.each do |main| %>
      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="content-box big ch-item bottom-pad-small">
          <div class="ch-info-wrap">
            <div class="ch-info">
              <div class="ch-info-front ch-img-1"><i class="<%= main .icon %>"></i></div>
              <div class="ch-info-back">
                <i class="icon-fullscreen"></i>
              </div>
            </div>
          </div>
          <div class="content-box-info">
            <h3><%= main.title %></h3>
            <p>
              <%= main .summary %>
            </p>
            <a href=<%= news_path(main) %>>了解更多 <i class="icon-angle-right"></i><i class="icon-angle-right"></i></a>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
<!-- Main Content end-->
