<%= render 'admintop' %>



<div id="main">


  <div class="breadcrumb-wrapper">
    <div class="container">






      <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 row">
        <h3 class="title">留言</h3>
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>姓名</th>
            <th>联系方式</th>
            <th>主题</th>
            <th>创建时间</th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          <% @messages.each do |message| %>
              <tr>
                <td><%= message.name %></td>
                <td><%= message.information %></td>
                <td><%= link_to message.title,message_path(message)%></td>
                <td><%= message.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td><%= link_to '', message, method: :delete, data: { confirm: 'Are you sure?' },class:"icon-trash" %></td>
              </tr>
          <% end %>

          </tbody>
        </table>


      </div>


    </div>
  </div>
</div>




<%= render 'footer' %>